    "/contacts/": {
      "get": {
        "tags": [
          "Contacts"
        ],
        "summary": "Gets all contacts",
        "description": "Gets a list of all of the contacts from the database.",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "OK, a list of all of the contacts will be returned"
          }
        }
      },
      "post": {
        "tags": [
          "Contacts"
        ],
        "summary": "Creates a new contact",
        "description": "Creates a new contact from the JSON body info that you provide which will include: firstName, lastname, email, favoriteColor, and birthday",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "firstName": {
                  "example": "John"
                },
                "lastname": {
                  "example": "Johnson"
                },
                "email": {
                  "example": "test1@test.com"
                },
                "favoriteColor": {
                  "example": "blue"
                },
                "birthday": {
                  "example": "02-15-1987"
                }
              }
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Success in creating your new contact!"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/contacts/{id}": {
      "get": {
        "tags": [
          "Contacts"
        ],
        "summary": "Pulls an already existing contact by their ID",
        "description": "Pulls a contact that is already in the database based off of it's ID that you provide",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK, success in pulling your contact!"
          }
        }
      },
      "put": {
        "tags": [
          "Contacts"
        ],
        "summary": "Updates an already exiting contact",
        "description": "Updates a contact that already exists in the database based off of the ID that you provide",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "firstName": {
                  "example": "any"
                },
                "lastname": {
                  "example": "any"
                },
                "email": {
                  "example": "any"
                },
                "favoriteColor": {
                  "example": "any"
                },
                "birthday": {
                  "example": "any"
                }
              }
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Success in updating your contact!"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "tags": [
          "Contacts"
        ],
        "summary": "Deletes a contact",
        "description": "Deletes a contact based off of the ID that you provide",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": {
            "description": "Contact was successfully deleted!"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
